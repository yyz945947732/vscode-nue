{
	"Nue For Loop": {
		"prefix": "nfor",
		"body": [":for=\"(${2:item}, ${3:index}) in ${1:array}\""],
		"description": "Nue For Loop"
	},
	"Nue If Statement": {
		"prefix": "nif",
		"body": [
			"<${1:div} :if=\"${2:condition}\"></${1:div}>",
